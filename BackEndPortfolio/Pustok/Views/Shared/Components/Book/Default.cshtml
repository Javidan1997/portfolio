@model List<Book>
@foreach (var book in Model)
{
    BookPhoto poster = book.BookPhotos.FirstOrDefault(x => x.PosterStatus == true);
    BookPhoto hoverPoster = book.BookPhotos.FirstOrDefault(x => x.PosterStatus == false);

    <div class="col-lg-4 col-sm-6">
        <div class="product-card card-style-list">
            <div class="product-grid-content">
                <div class="product-header">
                    <a href="#" class="author">
                        @book.Author.Fullname
                    </a>
                    <h3><a href="product-details.html">Here Is A Quick Cure For Book</a></h3>
                </div>
                <div class="product-card--body">
                    <div class="card-image">
                        <img src="~/assets/image/products/@(poster==null?"":poster.Name)" alt="">
                        <div class="hover-contents">
                            <a href="product-details.html" class="hover-image">
                                <img src="~/assets/image/products/@(hoverPoster==null?"":hoverPoster.Name)" alt="">
                            </a>
                            <div class="hover-btns">
                                <a href="cart.html" class="single-btn">
                                    <i class="fas fa-shopping-basket"></i>
                                </a>
                                <a href="wishlist.html" class="single-btn">
                                    <i class="fas fa-heart"></i>
                                </a>
                                <a href="compare.html" class="single-btn">
                                    <i class="fas fa-random"></i>
                                </a>
                                <a href="#" data-toggle="modal" data-target="#quickModal"
                                   class="single-btn">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="price-block">
                        @if (book.DiscountPercent > 0)
                        {
                            <span class="price">£@book.DiscountedPrice</span>
                            <del class="price-old">£@book.Price</del>
                            <span class="price-discount">@book.DiscountPercent%</span>
                        }
                        else
                        {
                            <span class="price">£@book.Price</span>
                        }

                    </div>
                </div>
            </div>
            <div class="product-list-content">
                <div class="card-image">
                    <img src="~/assets/image/products/@(poster==null?"":poster.Name)" alt="">
                </div>
                <div class="product-card--body">
                    <div class="product-header">
                        <a href="#" class="author">
                            @book.Author.Fullname
                        </a>
                        <h3>
                            <a href="product-details.html" tabindex="0">
                                @book.Name
                            </a>
                        </h3>
                    </div>
                    <article>
                        <h2 class="sr-only">Card List Article</h2>
                        <p>
                            @book.Desc
                        </p>
                    </article>
                    <div class="price-block">
                        @if (book.DiscountPercent > 0)
                        {
                            <span class="price">£@book.DiscountedPrice</span>
                            <del class="price-old">£@book.Price</del>
                            <span class="price-discount">@book.DiscountPercent%</span>
                        }
                        else
                        {
                            <span class="price">£@book.Price</span>
                        }
                    </div>
                    <div class="rating-block">
                        <span class="fas fa-star star_on"></span>
                        <span class="fas fa-star star_on"></span>
                        <span class="fas fa-star star_on"></span>
                        <span class="fas fa-star star_on"></span>
                        <span class="fas fa-star "></span>
                    </div>
                    <div class="btn-block">
                        <a asp-action="addbasket" asp-controller="book" asp-route-id="@book.Id" class="btn btn-outlined">Add To Cart</a>
                        <a href="#" class="card-link">
                            <i class="fas fa-heart"></i> Add To
                            Wishlist
                        </a>
                        <a asp-action="addbasket" asp-controller="book" asp-route-id="@book.Id" class="card-link">
                            <i class="fas fa-random"></i> Add To
                            Cart
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}