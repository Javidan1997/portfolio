@model AppUser
@{
    ViewData["Title"] = "Profile";
}



    <div class="checkout-area pb-45 pt-65">
        <div class="container">
            <div class="row">
                <div class="ml-auto mr-auto col-lg-9">
                    <div class="checkout-wrapper">
                        <div id="faq" class="panel-group">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h5 class="panel-title"><span>1</span> <a data-toggle="collapse" data-parent="#faq" href="#my-account-1">Edit your account information </a></h5>
                                </div>
                                <div id="my-account-1" class="panel-collapse collapse show">
                                    <div class="panel-body">
                                        <div class="billing-information-wrapper">

                                            <div class="account-info-wrapper">
                                                <h4>My Account Information</h4>
                                                <h5>Your Personal Details</h5>
                                            </div>
                                            <form method="post">
                                                <div class="row">
                                                    <div class="col-lg-6 col-md-6">
                                                        <div class="billing-info">
                                                            <label asp-for="@Model.FullName">Full name</label>
                                                            <input asp-for="@Model.FullName" type="text">
                                                            <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                                                        </div>
                                                    </div>

                                                    <div class="col-lg-12 col-md-12">
                                                        <div class="billing-info">
                                                            <label asp-for="@Model.Email">Email Address</label>
                                                            <input asp-for="@Model.Email">
                                                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-12 col-md-12">
                                                        <div class="billing-info">
                                                            <label asp-for="@Model.CurrentPassword">Current Password</label>
                                                            <input asp-for="@Model.CurrentPassword">
                                                            <span asp-validation-for="@Model.CurrentPassword" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-12 col-md-12">
                                                        <div class="billing-info">
                                                            <label asp-for="@Model.Password">New Password</label>
                                                            <input asp-for="@Model.Password">
                                                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-12 col-md-12">
                                                        <div class="billing-info">
                                                            <label asp-for="@Model.ConfirmPassword">Confirm  New Password</label>
                                                            <input asp-for="@Model.ConfirmPassword">
                                                            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="billing-btn">
                                                    <button type="submit">Save</button>
                                                </div>
                                            </form>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  