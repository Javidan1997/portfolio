@model CourseViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";

    int counter = 1;
}

<div class="container-fluid">

    <a asp-action="create" class="btn btn-primary">Create</a>
    <table class="table">
        <thead>
            <tr class="row">
                <th scope="col" class="col-md-1">#</th>
                <th scope="col" class="col-md-3">Title</th>
                <th scope="col" class="col-md-2">Category</th>
                <th scope="col" class="col-md-1">Language</th>
                <th scope="col" class="col-md-1">Duration</th>
                <th scope="col" class="col-md-3"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Courses)
            {
                <tr class="row">
                    <th scope="row" class="col-md-1">@counter</th>
                    <td class="col-md-3">@item.Title</td>
                    <td class="col-md-2">@item.Category?.Name</td>
                    <td class="col-md-2">@item.Language</td>
                    <td class="col-md-1">@item.Duration</td>
                  
                    <td class="col-md-3">
                        <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                        <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>

                counter++;
            }

        </tbody>
    </table>

</div>