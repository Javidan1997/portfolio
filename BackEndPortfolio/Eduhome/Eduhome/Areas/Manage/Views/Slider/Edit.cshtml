@model Slider
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-body ">
            <form method="post" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-md-8">
                        <label asp-for="@Model.Name"></label>
                        <input asp-for="@Model.Name" class="form-control" placeholder="Fullname">
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-8">
                        <label asp-for="@Model.Desc"></label>
                        <textarea asp-for="@Model.Desc" class="form-control" placeholder="Desc" rows="3"></textarea>
                        <span asp-validation-for="@Model.Desc" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-8">
                        <label asp-for="@Model.File"></label>
                        <input accept="image/png,image/jpeg" asp-for="@Model.File" class="form-control" placeholder="">
                        <div style="margin-top:8px" class="photo-box">
                            @if (Model.Photo != null)
                            {
                                <img style="max-width:200px" src="~/uploads/authors/@Model.Photo" alt="Alternate Text" />
                                <input asp-for="@Model.Photo" hidden />
                                <i class="fas fa-times removePhoto"></i>
                            }
                        </div>
                        <span asp-validation-for="@Model.File" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Edit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script></script>

    <script>
        $(document).ready(function () {
            $(document).on("click", ".removePhoto", function () {
                $(".photo-box").empty()
            })
        })
    </script>
}