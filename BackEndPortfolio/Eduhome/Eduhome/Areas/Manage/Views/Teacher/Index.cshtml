
@model TeacherViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";

    int counter = 1;
}

<div class="container-fluid">

    <a asp-action="create" class="btn btn-primary">Create</a>
    <table class="table">
        <thead>
            <tr class="row">
                <th scope="col" class="col-md-1">#</th>
                <th scope="col" class="col-md-3">Fullname</th>
                <th scope="col" class="col-md-1">Faculty</th>
                <th scope="col" class="col-md-1">Experience</th>
                <th scope="col" class="col-md-3"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Teachers)
            {
            <tr class="row">
                <th scope="row" class="col-md-1">@counter</th>
                <td class="col-md-3">@item.Fullname</td>
                <td class="col-md-2">@item.Faculty</td>
                <td class="col-md-1">@item.Experience</td>

                <td class="col-md-3">
                    <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                    <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>

                counter++;
            }

        </tbody>
    </table>

</div>

